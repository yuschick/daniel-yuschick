---
layout: page.njk
current: article
---

{%- from 'macros/_link.njk' import link %}
<article>
    <h1>{{ title }}</h1>
    <section class="article-details">
        <div class="article-details-item">
            {% include '../assets/icons/icon-calendar.svg' %}
            <time pubdate datetime="{{ date }}">{{ formatDate(date) }}</time>
        </div>
        <div class="article-details-item">
            {% include '../assets/icons/icon-clock.svg' %}
            <span>{{ getArticleReadTime(content) }} min. read</span>
        </div>
        {% if canonical %}
            <div class="article-details-item">
                {% include '../assets/icons/icon-web-globe.svg' %}
                {{ link({ url: canonical, content: getCanonicalDomain(canonical) }) }}
            </div>
        {% endif %}
    </section>
    {{ content | safe }}
</article>

<div class="back-to-top-wrapper">
    <button class="back-to-top-container" type="button" onclick="goToTop()" title="Float back to the top of the page.">
        {% include '../assets/icons/icon-balloon.svg' %}
        <i class="pennywise" role="presentation">{% include '../assets/icons/icon-pennywise.svg' %}</i>
    </button>
</div>